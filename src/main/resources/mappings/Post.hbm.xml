<?xml version="1.0" encoding="ISO-8859-1"?>

<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping default-access="field"
                   default-cascade="save-update">

    <class name="model.Post">
        <id name="id">
            <generator class="native"/>
        </id>
        <many-to-one name="ownerUser" class="model.User" lazy="false" />
        <one-to-one name="vehicle" class="model.Vehicle" />
        <one-to-one name="pickUpCoord" class="model.Coord" lazy="false" />

        <list name="returnCoords" lazy="false">
            <key column="coords_id"/>
            <index column="returnCoords_indx"/>
            <element column="returnCoords" type="model.Coord"/>
        </list>

       <property name="sinceDate" type="java.time.LocalDateTime"/>
        <property name="UntilDate" type="java.time.LocalDateTime"/>
        <property name="phone"/>
        <property name="costPerDay"/>
        <property name="location"/>

    </class>

</hibernate-mapping>
