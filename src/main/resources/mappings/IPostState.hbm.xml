<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping default-access="field" default-cascade="save-update">

    <class name="model.interfaces.IPostState">
        <id name="id" column="id">
            <generator class="native" />
        </id>
        <discriminator column="status" type="string"/>
        <subclass name="model.states.post.AvailablePostST" discriminator-value="available"/>
        <subclass name="model.states.post.ReservedPostST" discriminator-value="reserved"/>
    </class>
</hibernate-mapping>