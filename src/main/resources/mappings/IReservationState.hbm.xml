<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping default-access="field" default-cascade="save-update">

    <class name="model.interfaces.IReservationState">
        <id name="id" column="id">
            <generator class="assigned" />
        </id>
        <discriminator insert="false" column="id" />
        <subclass name="model.states.reservation.ConfirmReservationST" discriminator-value="0"/>
        <subclass name="model.states.reservation.PendingReservationST" discriminator-value="1"/>
        <subclass name="model.states.reservation.RejectedReservationST" discriminator-value="2"/>
    </class>
</hibernate-mapping>